@{
    Layout = "_LayoutCoreAdmin";
}
@using Kursovaya.Models
@model List<TrainerViewModel>

<h1>Тренеры</h1>
<a class="btn btn-primary" asp-controller="TrainerCoreAdmin" asp-action="Insert" style="margin-top:5px; margin-bottom:5px;">Добавить тренера</a>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>E-Mail</th>
                <th>Телефон</th>
                <th>Специальность</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var trainer in Model)
            {
                <tr>
                    <td>@trainer.FirstName</td>
                    <td>@trainer.LastName</td>
                    <td>@trainer.Email</td>
                    <td>@trainer.Phone</td>
                    <td>@trainer.Specialization	</td>
                    <td><a class="btn btn-danger btn-sm" style="margin: 0.2em" asp-action="Remove" asp-route-id="@trainer.Id">Удалить</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>