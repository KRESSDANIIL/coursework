@{
    Layout = "_LayoutCoreAdmin";
}
@using Kursovaya.Models
@model List<ClientViewModel>

<h1>Клиенты</h1>
<a class="btn btn-primary" asp-controller="ClientCoreAdmin" asp-action="Insert" style="margin-top:5px; margin-bottom:5px;">Добавить Клиента</a>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>E-Mail</th>
                <th>Телефон</th>
                <th>Дата рождения</th>
                <th>Пол</th>
                <th>Тип членства</th>
                <th>Дата получения членства</th>
                <th>Дата окончания членства</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var client in Model)
            {
                <tr>
                    <td>@client.FirstName</td>
                    <td>@client.LastName</td>
                    <td>@client.Email</td>
                    <td>@client.Phone</td>
                    <td>@client.DateOfBirth</td>
                    <td>@client.Gender</td>
                    <td>@client.MembershipType</td>
                    <td>@client.MembershipStartDate</td>
                    <td>@client.MembershipEndDate</td>
                    <td><a class="btn btn-danger btn-sm" style="margin: 0.2em" asp-action="Remove" asp-route-id="@client.Id">Удалить</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>