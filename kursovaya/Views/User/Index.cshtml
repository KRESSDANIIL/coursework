@{
    Layout = "_LayoutCoreAdmin";
}
@using Kursovaya.Models
@model List<UserViewModel>

<h1>Администраторы</h1>
<a class="btn btn-primary" asp-controller="User" asp-action="Insert" style="margin-top:5px; margin-bottom:5px;">Добавить Администратора</a>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Логин</th>
                <th>Пароль</th>
                <th>Роль</th>
            </tr>
        </thead>
        <tbody>
            
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Password</td>
                    <td>@user.Role</td>
                    <td><a class="btn btn-danger btn-sm" style="margin: 0.2em" asp-action="Remove" asp-route-id="@user.Id">Удалить</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>