@model List<Data.Session>

<h1>Доступные сессии:</h1>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
         <tr>
            <th>ID</th>
            <th>Дата</th>
            <th>Длительность (минут)</th>
            <th>Тип</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var session in Model)
        {
            <tr>
                <td>@session.Id</td>
                <td>@session.SessionDate.ToShortDateString() @session.SessionDate.ToShortTimeString()</td>
                <td>@session.Duration</td>
                <td>@session.SessionType</td>
            </tr>
        }
    </tbody>
</table>